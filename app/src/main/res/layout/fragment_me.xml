<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UI.IndexView.MeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">
        <!--android:scrollbars= none 隐藏滚动条-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/self_bg" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:padding="16dp"
                    android:src="@mipmap/my_setting_icon" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="32dp"
                    android:background="@mipmap/self_bg2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/modify_userinfo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="24dp"
                        android:padding="2dp"
                        android:src="@mipmap/modify_userinfo"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="未登录"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="40dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="4dp"
                                android:layout_toEndOf="@+id/name"
                                android:background="@mipmap/identity_bg2"
                                android:gravity="center"
                                android:text="身份类型"
                                android:textColor="@color/grey"
                                android:textSize="9sp"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <android.support.v7.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:paddingEnd="18dp"
                        android:paddingStart="18dp"
                        app:columnCount="3"
                        app:rowCount="2">

                        <!---->
                        <LinearLayout
                            android:id="@+id/my_media"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_meeting_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的媒体"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_live"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_live_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的监控"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_put_in"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_video_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的投放"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_collect"
                            android:layout_margin="1dp"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_collect_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的收藏"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_order"
                            android:layout_margin="1dp"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_order_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的订单"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/my_enroll"
                            android:layout_margin="1dp"
                            android:orientation="vertical"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:src="@mipmap/my_wallet_icon"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="我的报备"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </android.support.v7.widget.GridLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/head_ic"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/avator_white"
                    android:src="@mipmap/avator_default" />
            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
