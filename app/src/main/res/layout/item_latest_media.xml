<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_index_latest_recommandation_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="6sp"
        app:cardElevation="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/recommendation_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/jingxuan" />

        <TextView
            android:id="@+id/recommendation_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="距离10号线虹桥火车站500米"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommendation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长的名字"
        android:textColor="@color/black"/>

</LinearLayout>
